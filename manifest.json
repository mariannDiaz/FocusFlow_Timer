
{
  "manifest_version": 3,
  "name": "Pomodoro Timer",
  "version": "1.0",
  "description": "A simple and clean Pomodoro timer to help you stay focused.",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "16x16_green_timer.png",
      "48": "48x48_green_timer.png"
    }
  },
  "icons": {
    "16": "16x16_green_timer.png",
    "48": "48x48_green_timer.png",
    "128": "128x128_green_timer.png"
  }
  
}
